<!-- /views/partials/viewItem.ejs -->

<div class="modal fade text-dark" id="viewItem-<%= cards.id %>">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-body">
        <div class="container">
          <div class="modal-header">
                  <h2 class="modal-title ">
                    Contact Seller
                  </h5>
                  <button class="close" data-dismiss="modal">
                    <span>&times;</span>
                  </button>
                </div>
          <div class="modalCard row">
              
            <div class="col-lg-6 col-sm-12 p-0">
              <div class="row">
              <div class="multipics col-4">
                  <img src="<%= cards.image %>" style="height: 100px; width: 100%;" alt="" class="m-1">
                  <img src="<%= cards.image %>" style="height: 100px; width: 100%;" alt="" class="m-1">
                  <img src="<%= cards.image %>" style="height: 100px; width: 100%;" alt="" class="m-1">
              </div>
              <div class="mainpic col-8">
                  <img src="<%= cards.image %>" style="height: 350px; width: 100%;" alt="" class="m-1">

              </div>
            </div>
            </div>
            <div  class="col-lg-6 col-sm-12"  >
              <div class="itemdescrip">
                
                      
                        <h4 class="itemTitle"><%= cards.title %></h3>
                          <h4>$<%= cards.price %></h3>
                            <hr>
                            <h4><%= cards.description %></h3>
                      
                  
              </div>
            

              <div class="modal-footer btn-block">
                <a class="modalbtn " href="#">
                  <button class="btn btn-warning btn-block" style="width: 100%">
                    Submit
                  </button></a
                >

              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
